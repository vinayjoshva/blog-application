<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Application</title>
    <link rel="stylesheet" href="styles/main.css"> <!-- Assuming you will add CSS here -->
</head>
<body>
    <h1>Blog Application</h1>

    <!-- Form to Create New Blog Post -->
    <form action="/submit" method="POST">
        <input type="text" name="title" placeholder="Enter blog name" />
        <button type="submit">Submit</button>
    </form>

    <!-- Display Error Message -->
    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>

    <!-- Display All Blog Posts -->
    <div>
      <h2>All Blog Posts</h2>
      <ul>
          <% title.forEach(function(blog, index) { %>
              <li>
                  <%= blog %> 
                  <!-- Edit and Delete links with dynamic URLs -->
                  <a href="/edit/<%= index %>">Edit</a> | 
                  <form action="/delete/<%= index %>" method="POST" style="display:inline;">
                      <button type="submit">Delete</button>
                  </form>
              </li>
          <% }); %>
      </ul>
  </div>
</body>
</html>
